/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "transpileOnly": true,
      "files": true
    }
  },
  "compilerOptions": {
    "baseUrl": "./"
  },
  "files": [
    "server.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],    
  "exclude": [
    "**/*.spec.ts",
    "src/test.ts",
    "**/node_modules/**"
  ]
}
