{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@environments/*": ["environments/*"]
    },    
    "outDir": "./out-tsc/app"
  },
  "files": [
    "neslo-frontend/src/main.ts",
    "neslo-frontend/src/polyfills.ts",
    "neslo-frontend/src/main.server.ts",
    "/server.ts"
  ],
  "exclude": [
    "neslo-frontend/src/test.ts",
    "neslo-frontend/src/**/*.spec.ts"
  ]
}