/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@environments/*": ["environments/*"]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "server.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "src/test.ts",
    "**/node_modules/**"
  ]
}
